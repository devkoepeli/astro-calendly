---
interface Props {
    href: string;
    text: string;
}

const { href, text } = Astro.props;
---

<a href={href}>{text}</a>

<style>
    a {
        display: inline-block;
        font-weight: bold;
        background: transparent;
        color: var(--text-white);
        border: white 2px solid;
        padding: 16px 28px;
        transition: all 0.25s ease-in-out;
        cursor: pointer;
    }

    a:hover {
        background: white;
        color: var(--primary-color);
    }
</style>
