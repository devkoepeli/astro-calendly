<form method="POST" action="" id="form">
    <div class="form-field">
        <input
            type="text"
            id="name"
            name="name"
            placeholder="Vor- und Nachname"
            required
        />
    </div>
    <div class="form-field">
        <input
            type="number"
            id="phone"
            name="phone"
            placeholder="Telefon"
            required
        />
    </div>
    <div class="form-field">
        <input
            type="email"
            id="email"
            name="email"
            placeholder="E-Mail"
            required
        />
    </div>
    <div class="form-field">
        <textarea name="message" id="message" placeholder="Nachricht" required
        ></textarea>
    </div>
    <button type="submit">Nachricht absenden</button>
</form>

<style>
    form {
        display: flex;
        flex-direction: column;
        gap: 16px;
        width: 100%;
        background: white;
        padding: 32px 16px;
        border-radius: 8px;
        box-shadow: 0 0 12px 2px rgba(0, 0, 0, 0.2);
    }

    input,
    textarea {
        -webkit-appearance: none;
        appearance: none;
        background: var(--primary-color-light);
        padding: 12px 16px;
        border: unset;
        border-radius: 0.2rem;
        width: 100%;
        font-size: 16px;
    }
    input:hover,
    textarea:hover {
        box-shadow: 0 0 0 2px var(--primary-color);
    }
    input:focus,
    textarea:focus {
        outline: none;
        box-shadow: 0 0 0 2px var(--primary-color);
    }

    textarea {
        display: inline-block;
        height: 150px;
        resize: unset;
    }

    button {
        background: var(--primary-color);
        padding: 16px 28px;
        font-weight: bold;
        transition: all 0.25s ease-in-out;
        cursor: pointer;
        border: var(--primary-color) 2px solid;
        border-radius: 0.2rem;
        color: var(--text-white);
    }

    button:hover {
        background: white;
        color: var(--primary-color);
    }
    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type="number"] {
        -moz-appearance: textfield;
    }
</style>
